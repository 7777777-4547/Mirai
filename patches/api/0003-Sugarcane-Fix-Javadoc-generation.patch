@@ -91,6 +91,8 @@ tasks.jar {
 
 tasks.withType<Javadoc>().configureEach {
     (options as CoreJavadocOptions).addStringOption("sourcepath", apiAndDocs.resolvedConfiguration.files.joinToString(separator = File.pathSeparator, transform = File::getPath))
