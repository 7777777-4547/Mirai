diff --git a/src/main/java/org/bukkit/Server.java b/src/main/java/org/bukkit/Server.java
index 26379a174dcf8f2014e258cf4c2ab793ac44a7b0..b2b54d557fcd600af194a3b51cbd5a734f44ac9e 100644
