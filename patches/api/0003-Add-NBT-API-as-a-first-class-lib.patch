diff --git a/build.gradle.kts b/build.gradle.kts
index 4dfe75727f69b48907c7edf7a46e580cbd7b1648..b4af95b2317d02672a606f72a34094f569747560 100644
--- a/build.gradle.kts
+++ b/build.gradle.kts
@@ -1,6 +1,7 @@
 plugins {
     `java-library`
     `maven-publish`
+    id("com.github.johnrengelman.shadow")
 }
 
 java {
@@ -42,6 +43,7 @@ dependencies {
     api("org.slf4j:slf4j-api:1.8.0-beta4")
     api("io.sentry:sentry:5.4.0") // Pufferfish
     api("net.kyori:adventure-text-minimessage:4.1.0-SNAPSHOT") // Purpur
+    api("de.tr7zw:item-nbt-api:2.9.2-SNAPSHOT") // Yatopia
 
     implementation("org.ow2.asm:asm:9.2")
     implementation("org.ow2.asm:asm-commons:9.2")
@@ -102,6 +104,10 @@ tasks.jar {
     }
 }
 
+tasks.shadowJar {
+    relocate("de.tr7zw.changeme.nbtapi", "de.tr7zw.nbtapi")
+}
+
 tasks.withType<Javadoc> {
     (options as StandardJavadocDocletOptions).addStringOption("-add-modules", "jdk.incubator.vector") // Purpur - our javadocs need this for pufferfish's SIMD patch
     inputs.files(apiAndDocs)
